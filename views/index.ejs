<!DOCTYPE html>
<html lang="en">

<%- include('header') -%>

 <body>
    <div class="container">
        <div>
            <a href="users/new" class="button inner-link"><i class="material-icons mr-2">add_circle</i>New User</a>
        </div>

        <div class="mt">

            <% if(users.length<1){%>

            <p class="text-white">No users yet, create a new one</p>
            <% } else{ %>  
            <div style="display: flex; flex-direction: row; justify-content: space-between; color: white;">
                <div class="box">Full Name</div>
                <div class="box">Country</div>
                <div class="box">Birthday</div>
                <div class="box">Options</div>
            </div>
            
            <% } %>

            <% users.forEach(user=>{ %>

            <div class="user-row">
                <div class="box capitalize"> <%= user.first_name %> <%= user.last_name %></div>
                <div class="box"><%= user.country %></div>
                <div class="box"><%= new Date(user.birthday).toLocaleDateString() %></div>
                <div class="box options">
                    <a href="users/<%=user.slug %> ">
                        <button class="icon" style="background:#04a259;">
                            <i class="material-icons" style="color:white;">preview</i>
                        </button>
                    </a>
                    <a href="users/edit/<%= user.id %>">
                        <button class="icon" style="background:#007bff;">
                            <i class="material-icons" style="color:white;">create</i>
                        </button>
                    </a>
                    <form action="/users/<%=user.id%>?_method=DELETE" method="POST">
                        <button style="background:rgb(173, 43, 43);" class="icon">
                            <i class="material-icons" style="color:white;">delete</i>
                        </button>
                    </form>
                </div>
            </div>
            <% }) %>




        </div>
        <script src="/js/index.js"></script>

</body>

</html>